datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Shower {
  id        String    @id @default(uuid())
  name      String
  minPrice  Int
  maxPrice  Int
  elements  Element[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Element {
  id           String   @id @default(uuid())
  title        String
  minValue     Int
  maxValue     Int
  defaultValue Int
  type         String
  Shower       Shower?  @relation(fields: [showerId], references: [id])
  showerId     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Glass {
  id        String   @id @default(uuid())
  name      String
  price     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Binding {
  id        String   @id @default(uuid())
  name      String
  price     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
